extends ../layout_admin

block content
  .container(style='background-color: #f8f9fa; color: #1db954; padding: 2rem;')
    h1.my-4= title
    ul.list-group
      each playlist in playlists
        li.list-group-item.d-flex.justify-content-between.align-items-center
          .d-flex.align-items-center
            if playlist.avatar
              img(src=playlist.avatar, alt=playlist.title, class='rounded-circle', style='width: 50px; height: 50px; object-fit: cover; margin-right: 15px;')
            else
              .bg-secondary.text-white.rounded-circle.d-flex.align-items-center.justify-content-center(style='width: 50px; height: 50px; margin-right: 15px;')
                | No Image
            .ml-2
              a(href=`/admin/playlists/${playlist.id}`, class='text-decoration-none text-dark')
                h5.mb-1= playlist.title
              small Type: #{playlist.type} | Created At: #{new Date(playlist.createdAt).toDateString()}
    .mt-4
      a.btn.btn-success(href='/admin/playlists/create') Create New Playlist
