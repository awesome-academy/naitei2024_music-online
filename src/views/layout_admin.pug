
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    link(rel="stylesheet", href="/styles/custom_homepage.css")
    link(rel="stylesheet" href="/styles/style.css")
    link(rel="stylesheet" href="/styles/custom_footer.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    block stylesheets
    script(src="/scripts/jquery.min.js")
    script(src="/scripts/popper.min.js")
    script(src="/scripts/bootstrap.min.js")
    script(src="/js/layout_admin.js")
  body
    nav.navbar.navbar-dark
      a.navbar-brand(href="/admin")= t('navbar.brand')
      div.navbar-right
        a.btn.btn-login(href="/logout")= t('action.logout')
        span.language-selector
        a.text-decoration-none.text-light.pe-2(href='?lng=en') #{t('navbar.language.english')} 
        a.text-decoration-none.text-light |
        a.text-decoration-none.text-light.ps-2(href='?lng=vi') #{t('navbar.language.vietnamese')}

    .main-content
      .sidebar
        ul.nav.flex-column
          li.nav-item.active
            a.nav-link(href="/admin/genres")
              = t('sidebar.genre')
          li.nav-item
            a.nav-link(href="/admin/authors")
              = t('sidebar.author')
          li.nav-item
            a.nav-link(href="/admin/users")
              = t('sidebar.user')
          li.nav-item
            a.nav-link(href="/admin/musics")
              = t('sidebar.song')
          li.nav-item
            a.nav-link(href="/admin/albums")
              = t('sidebar.album')
          li.nav-item.divider
            hr
          li.nav-item
            a.nav-link(href="/admin/playlists")
              = t('sidebar.create_playlist')

      block content

    footer.audio-player
      audio#main-audio-player
        | Your browser does not support the audio element.
      .controls
        button#prev-btn(type="button")
          i.fas.fa-backward
        button#play-pause-btn(type="button")
          i.fas.fa-play
        button#next-btn(type="button")
          i.fas.fa-forward
        .time
          span#current-time 00:00
          span#duration / 00:00
        input#progress(type="range", min="0", value="0")
        .volume-container
          i.fas.fa-volume-up
          input#volume(type="range", min="0", max="1", step="0.01", value="1")
